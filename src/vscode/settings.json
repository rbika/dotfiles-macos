{
  // Window
  "window.autoDetectColorScheme": true,

  // Editor
  "editor.minimap.renderCharacters": false,
  "editor.detectIndentation": true,
  "editor.rulers": [100],
  "editor.snippetSuggestions": "top",
  "editor.wordBasedSuggestions": false,
  "editor.smoothScrolling": true,
  "editor.tabSize": 2,

  // Workbench
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Default Dark+ Experimental",
  "workbench.preferredDarkColorTheme": "Default Dark+ Experimental",
  "workbench.preferredLightColorTheme": "Default Light+ Experimental",

  // Integrated Terminal
  "terminal.integrated.fontFamily": "Menlo, Monaco, Hack Nerd Font",
  "terminal.integrated.lineHeight": 1.1,
  "terminal.integrated.fontWeightBold": "normal",

  // Diff Editor
  "diffEditor.renderSideBySide": false,

  // Explorer
  "explorer.compactFolders": false,

  // Material Icon (Plugin)
  "material-icon-theme.folders.theme": "classic",
  
  // GitLens (Plugin)
  "gitlens.hovers.avatarSize": 24,
  "gitlens.views.commits.avatars": false,
  "gitlens.graph.showDetailsView": false,
  "gitlens.graph.showGhostRefsOnRowHover": false,
  "gitlens.graph.dimMergeCommits": true,
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.recentChange.enabled": false

  // ---
}
